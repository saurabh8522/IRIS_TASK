<%= form_with(model: item, local: true, html: { multipart: true }) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  </div>


<form>
  <div class="container">
  <div class="form-group container">
    <label for="formGroupExampleInput"><strong><%= form.label :user_name %></strong></label>
    <%= form.text_field :user_name ,class: "form-control", id: "formGroupExampleInput", placeholder: "Name"%>
  </div><br>
  <div class="form-group container">
    <label><strong><%= form.label :contact_number %></strong></label>
    <%= form.text_field :contact_number, class: "form-control", id: "formGroupExampleInput2", placeholder: "Contact Number" %>
  </div>
  <div class="form-group container">
    <label><strong><%= form.label :title %></strong></label>
    <%= form.text_field :title, class: "form-control", id: "formGroupExampleInput2", placeholder: "Ex: Bicycle,Books Etc." %>
  </div>
  <div class="form-group container">
    <label><strong><%= form.label :description %></strong></label>
    <%= form.text_area :description, class: "form-control", id: "formGroupExampleInput2", placeholder: "Description of the Item" %>
  </div>
  <div class="form-group container">
    <label><strong><%= form.label :cost %></strong></label>
    <%= form.number_field :cost, class: "form-control", id: "formGroupExampleInput2", placeholder: "Expected Cost" %>
  </div>
  <div class="form-group container">
    <div class="col-sm-4"><strong><%= form.label :sell %></strong></div>
    <div class="col-sm-8">
      <div class="form-check">
        <%= form.check_box :sell  %>
        <label class="form-check-label" for="gridCheck1">
          Tick if you want to sell your item.
        </label>
      </div>
    </div>
  </div>
  <div class="form-group container">
    <div class="col-sm-4"><strong><%= form.label :share %></strong></div>
    <div class="col-sm-10">
      <div class="form-check">
        <%= form.check_box :share  %>
        <label class="form-check-label" for="gridCheck1">
          Tick if you want to share your item.
        </label>
      </div>
    </div>
  </div>
  <div class="form-group container">
    <label for="formGroupExampleInput2"><strong><%= form.label :image %></strong></label>
    <%= form.file_field :image, class: "form-control", id: "formGroupExampleInput2" %>
  </div>
  <div class="actions">
    <%= form.submit class: "btn btn-success" %>
  </div>
</div>
</form>
<% end %>